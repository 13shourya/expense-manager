<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="#FFFFFF">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Firebase Connection Test"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="32dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Checking Firebase configuration..."
            android:textSize="12sp"
            android:background="#F5F5F5"
            android:padding="16dp"
            android:textIsSelectable="true" />

    </ScrollView>

    <Button
        android:id="@+id/btnCheckConfig"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1. Check Firebase Config"
        android:layout_marginBottom="8dp"
        android:backgroundTint="#2196F3" />

    <Button
        android:id="@+id/btnTestAuth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2. Test Firebase Auth"
        android:layout_marginBottom="8dp"
        android:backgroundTint="#FF9800" />

    <Button
        android:id="@+id/btnTestFirestore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="3. Test Firestore Database"
        android:backgroundTint="#4CAF50" />

</LinearLayout>